{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "filename": {
            "description": "File name of the attachment.",
            "type": "string"
        },
        "description": {
            "description": "Description of the attachment.",
            "type": "string"
        },
        "contentAsBase64": {
            "description": "Content of the attachment file encoded as base64.",
            "type": "string"
        }
    },
    "required": [
        "filename",
        "contentAsBase64"
    ]
}